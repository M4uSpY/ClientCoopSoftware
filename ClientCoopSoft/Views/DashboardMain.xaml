<Window
    x:Class="ClientCoopSoft.Views.DashboardMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ClientCoopSoft.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="DashboardMain"
    Width="1200"
    Height="700"
    MinWidth="1366"
    MinHeight="768"
    Background="Transparent"
    Icon="/Assets/Logo_Cooperativa.png"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:BoolToTextoFlechaConverter x:Key="BoolToTextoFlechaConverter" />
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="0,3,0,0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="12" />

            <Style.Triggers>
                <!--  Hover  -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FBBF24" />
                    <Setter Property="Foreground" Value="#232A33" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#232A33">
            <StackPanel Margin="0,15,0,0">
                <Image
                    Height="130"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Assets/LogoCooperativaFinal.png">
                    <Image.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                    </Image.LayoutTransform>
                </Image>

                <Separator
                    Height="0.09"
                    Margin="0,15,0,0"
                    Background="WhiteSmoke" />
                <StackPanel Margin="10,0,10,10" Orientation="Vertical">
                    <TextBlock
                        Margin="0,15,0,15"
                        Foreground="White"
                        Text="{Binding Bienvenida}" />
                    <StackPanel Orientation="Horizontal">

                        <Ellipse
                            Width="71"
                            Height="70"
                            RenderOptions.BitmapScalingMode="HighQuality">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding FotoPerfil}" Stretch="UniformToFill" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <StackPanel
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                Width="100"
                                Margin="0,0,0,10"
                                FontWeight="Bold"
                                Foreground="#EFB214"
                                Text="{Binding Info}"
                                TextAlignment="Justify"
                                TextWrapping="Wrap" />
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="#FFF3BC"
                                Text="{Binding Rol}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <Separator
                    Height="0.2"
                    Margin="0,15,0,15"
                    Background="WhiteSmoke" />

                <!--  INICIO  -->
                <Border Margin="2,1,1,2" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="Inicio">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AbrirInicioCommand}"
                        CommandParameter="Inicio"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">

                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/iconInicio.png" />

                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="Inicio" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding AbrirInicioCommand}"
                            CommandParameter="Inicio"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Informacion PERSONAL  -->
                <Border Margin="2,1,1,2" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="InformacionPersonal">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AbrirInformacionPersonalCommand}"
                        CommandParameter="InformacionPersonal"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">

                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/informacionPersonal.png" />

                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="Información Personal" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding AbrirInformacionPersonalCommand}"
                            CommandParameter="InformacionPersonal"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Boletas de pago  -->
                <Border
                    Margin="2,1,1,2"
                    CornerRadius="5"
                    Visibility="{Binding CanSeeBoletas, Converter={StaticResource BoolToVis}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="BoletasPago">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AbrirBoletasPagoCommand}"
                        CommandParameter="BoletasPago"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/boletasPagoIcon.png" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="Tus boletas de pago" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding AbrirBoletasPagoCommand}"
                            CommandParameter="BoletasPago"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Personas  -->
                <Border
                    Margin="2,1,1,2"
                    CornerRadius="5"
                    Visibility="{Binding CanSeeAdminModules, Converter={StaticResource BoolToVis}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="Personas">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AbrirPersonasCommand}"
                        CommandParameter="Personas"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/personasIcon.png" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="Personas" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding AbrirPersonasCommand}"
                            CommandParameter="Personas"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Trabajadores  -->
                <Border
                    Margin="2,1,1,2"
                    CornerRadius="5"
                    Visibility="{Binding CanSeeAdminModules, Converter={StaticResource BoolToVis}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="Trabajadores">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AbrirTrabajadoresCommand}"
                        CommandParameter="Trabajadores"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/trabajadoresIcon.png" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="Trabajadores" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding AbrirTrabajadoresCommand}"
                            CommandParameter="Trabajadores"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Usuarios  -->
                <Border
                    Margin="2,1,1,2"
                    CornerRadius="5"
                    Visibility="{Binding CanSeeAdminModules, Converter={StaticResource BoolToVis}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="Usuarios">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding OpenUsuariosCommand}"
                        CommandParameter="Usuarios"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/usuriosIcon.png" />
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Text="Usuarios" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding OpenUsuariosCommand}"
                            CommandParameter="Usuarios"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Asistencia trabajadores  -->
                <Border
                    Margin="2,1,1,2"
                    CornerRadius="5"
                    Visibility="{Binding CanSeeAdminModules, Converter={StaticResource BoolToVis}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="Asistencias">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AbrirAsistenciasCommand}"
                        CommandParameter="Asistencias"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/asistenciaIcon.png" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="Asistencia de Trabajadores" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding AbrirAsistenciasCommand}"
                            CommandParameter="Asistencias"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Vacaciones y permisos  -->
                <Border Margin="2,1,1,2" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="VacacionesLicencias">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AbrirVacacionesLicenciasCommand}"
                        CommandParameter="VacacionesLicencias"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/calendarioIcon.png" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="Licencias y Vacaciones" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding AbrirVacacionesLicenciasCommand}"
                            CommandParameter="VacacionesLicencias"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Faltas registradas  -->
                <Border
                    Margin="2,1,1,2"
                    CornerRadius="5"
                    Visibility="{Binding CanSeeAdminModules, Converter={StaticResource BoolToVis}}">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="Faltas">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AbrirFaltasCommand}"
                        CommandParameter="Faltas"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/faltasIcon.png" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="Faltas registradas" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding AbrirFaltasCommand}"
                            CommandParameter="Faltas"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Planillas  -->
                <!--  Planillas (menú desplegable)  -->
                <StackPanel Margin="2,1,1,2" Visibility="{Binding CanSeeAdminModules, Converter={StaticResource BoolToVis}}">

                    <!--  CABECERA PLANILLAS  -->
                    <Border CornerRadius="5">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5CAEB0" />
                                    </Trigger>

                                    <!--  Activo si estoy en alguna opción de planillas  -->
                                    <DataTrigger Binding="{Binding MenuSeleccionado}" Value="PlanillaSueldos">
                                        <Setter Property="Background" Value="#3D8284" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding MenuSeleccionado}" Value="PlanillaAportes">
                                        <Setter Property="Background" Value="#3D8284" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Button
                            Padding="10,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding TogglePlanillasCommand}"
                            Focusable="False"
                            FontSize="12"
                            FontWeight="UltraLight"
                            Foreground="White">
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                </Grid.ColumnDefinitions>

                                <Image
                                    Grid.Column="0"
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="/Assets/IconosDashboard/planillasIcon.png" />

                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Text="Planillas" />

                                <!--  Flechita para indicar desplegable  -->
                                <TextBlock
                                    Grid.Column="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding IsPlanillasExpandida, Converter={StaticResource BoolToTextoFlechaConverter}, FallbackValue='▸'}" />
                            </Grid>
                        </Button>
                    </Border>

                    <!--  SUBMENÚ PLANILLAS  -->
                    <StackPanel Margin="32,2,0,0" Visibility="{Binding IsPlanillasExpandida, Converter={StaticResource BoolToVis}}">

                        <Button
                            HorizontalAlignment="Left"
                            Command="{Binding AbrirPlanillaSueldosCommand}"
                            Style="{StaticResource MenuButtonStyle}">
                            <TextBlock Text="Planilla de Sueldos y Salarios" />
                        </Button>

                        <Button
                            HorizontalAlignment="Left"
                            Command="{Binding AbrirPlanillaAportesCommand}"
                            Style="{StaticResource MenuButtonStyle}">
                            <TextBlock Text="Planilla de Aportes y Beneficios" />
                        </Button>
                    </StackPanel>
                </StackPanel>


                <!--  Reportes  -->
                <Border
                    Margin="2,1,1,2"
                    CornerRadius="5"
                    Visibility="{Binding CanSeeReportesLogs, Converter={StaticResource BoolToVis}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="Reportes">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AbrirReportesCommand}"
                        CommandParameter="Reportes"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/reportesIcon.png" />
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Text="Reportes" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding AbrirReportesCommand}"
                            CommandParameter="Reportes"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Logs  -->
                <Border
                    Margin="2,1,1,2"
                    CornerRadius="5"
                    Visibility="{Binding CanSeeReportesLogs, Converter={StaticResource BoolToVis}}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#5CAEB0" />
                                </Trigger>
                                <DataTrigger Binding="{Binding MenuSeleccionado}" Value="Logs">
                                    <Setter Property="Background" Value="#3D8284" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Button
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding AbrirLogsCommand}"
                        CommandParameter="Logs"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="UltraLight"
                        Foreground="White">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/reportesIcon.png" />
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Text="Logs de Acceso" />
                        </Grid>
                    </Button>

                    <Border.InputBindings>
                        <MouseBinding
                            Command="{Binding AbrirLogsCommand}"
                            CommandParameter="Logs"
                            MouseAction="LeftClick" />
                    </Border.InputBindings>
                </Border>

                <!--  Salir  -->
                <Border Margin="2,1,1,2" CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#FF214F" />
                            <Setter Property="Cursor" Value="Hand" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF3366" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Button
                        x:Name="btnExit"
                        Width="207"
                        Padding="10,5"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding CerrarSesionCommand}"
                        Cursor="Hand"
                        Focusable="False"
                        FontSize="12"
                        FontWeight="SemiBold"
                        Foreground="White">
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Source="/Assets/IconosDashboard/salirIcon.png" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="Salir" />
                        </Grid>
                    </Button>
                </Border>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1" Background="White">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Inter"
                FontSize="40"
                FontWeight="SemiBold" />
            <ContentControl Content="{Binding CurrentView}" />
        </Grid>
    </Grid>
</Window>
