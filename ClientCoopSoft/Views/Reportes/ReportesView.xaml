        <Button
            Grid.Row="0"
            Grid.Column="2"
            Width="300"
            Height="400"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding AbrirHistoricoUsuariosCommand}"
            Cursor="Hand">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <md:PackIcon
                    Width="250"
                    Height="250"
                    HorizontalAlignment="Center"
                    Foreground="#3D8284"
