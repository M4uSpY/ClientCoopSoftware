<UserControl
    x:Class="ClientCoopSoft.Views.Trabajadores.ListarTrabajadoresView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ClientCoopSoft.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.Trabajadores"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:BoolToGeneroConverter x:Key="BoolToGeneroConverter" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="SemiBold"
            Text="Lista de Trabajadores" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,0,0,20"
            FontSize="20"
            FontWeight="SemiBold"
            Text="Agregar trabajador"
            TextAlignment="Right" />

        <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            Margin="10,0,0,40"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <!--  Botón Agregar (tu original)  -->
            <Button
                Width="40"
                Height="40"
                Background="#22B14C"
                BorderBrush="Transparent"
                Command="{Binding AgregarTrabajadorCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="Agregar trabajador">
                <md:PackIcon Foreground="White" Kind="AccountPlus" />
            </Button>
        </StackPanel>
        <DataGrid
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="0"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding Trabajadores}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding IdTrabajador}"
                    Header="No" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CI}"
                    Header="CI" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Apellidos}"
                    Header="Apellidos" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Nombres}"
                    Header="Nombres" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Nacionalidad}"
                    Header="Nacionalidad" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Genero, Converter={StaticResource BoolToGeneroConverter}}"
                    Header="Genero" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Cargo}"
                    Header="Cargo" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NombreOficina}"
                    Header="Oficina" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Activo}"
                    Header="Estado" />
                <DataGridTemplateColumn Width="150" Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <Button
                                    Width="30"
                                    Height="30"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EditarTrabajadorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <Viewbox Stretch="Uniform">
                                        <md:PackIcon Foreground="#EFB214" Kind="PencilBox" />
                                    </Viewbox>
                                </Button>
                                <Button
                                    Width="30"
                                    Height="30"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EliminarTrabajadorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <Viewbox Stretch="Uniform">
                                        <md:PackIcon Foreground="#D9534F" Kind="Delete" />
                                    </Viewbox>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
