<Window
    x:Class="ClientCoopSoft.Views.Capacitaciones.CapacitacionCrearView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.Capacitaciones"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="{Binding TituloVentana}"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Text="Agregar Capacitacion" />
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,0,10"
            Orientation="Vertical">
            <StackPanel Margin="0,0,0,10" Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Titulo de la capacitacion:" />
                <TextBox
                    Width="300"
                    Margin="0,5,0,0"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Titulo, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10" Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Institucion donde realizo el curso:" />
                <TextBox
                    Width="300"
                    Margin="0,5,0,0"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Institucion, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10" Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Carga Horaria:" />
                <TextBox
                    Width="300"
                    Margin="0,5,0,0"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding CargaHoraria, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10" Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Fecha:" />
                <DatePicker
                    Width="300"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    SelectedDate="{Binding Fecha, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
            </StackPanel>
        </StackPanel>


        <!--  Botones  -->
        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="1"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="0,0,5,0"
                md:ButtonAssist.CornerRadius="5"
                Command="{Binding CancelarCommand}"
                Content="Cancelar" />
            <Button
                Width="100"
                md:ButtonAssist.CornerRadius="5"
                Background="#4CAF50"
                Command="{Binding GuardarCommand}"
                Content="Guardar"
                Foreground="White" />
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Image
                Width="250"
                Height="250"
                Source="{Binding FotoBytes}" />
            <Button Command="{Binding SubirFotoCommand}" Content="Subir Foto" />
        </StackPanel>
    </Grid>
</Window>
