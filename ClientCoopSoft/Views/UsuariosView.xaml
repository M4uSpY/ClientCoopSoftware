<UserControl
    x:Class="ClientCoopSoft.Views.UsuariosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ClientCoopSoft.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToGeneroConverter x:Key="BoolToGeneroConverter" />
        <converters:EstadoToIconConverter x:Key="EstadoToIconConverter" />
        <converters:EstadoToColorConverter x:Key="EstadoToColorConverter" />
        <converters:EstadoToTextConverter x:Key="EstadoToTextConverter" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="SemiBold"
            Text="Lista de Usuarios" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,0,0,20"
            FontSize="20"
            FontWeight="SemiBold"
            Text="Agregar usuario"
            TextAlignment="Right" />
        <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            Margin="10,0,0,40"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <!--  Botón Agregar (tu original)  -->
            <Button
                Width="40"
                Height="40"
                Background="#22B14C"
                BorderBrush="Transparent"
                Command="{Binding AgregarUsuarioCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="Agregar usuario">
                <md:PackIcon Foreground="White" Kind="AccountPlus" />
            </Button>

            <!--  Exportar a Excel (.xlsx)  -->
            <Button
                Width="40"
                Height="40"
                Margin="8,0,0,0"
                Background="#1D9942"
                BorderBrush="Transparent"
                Command="{Binding ExportarExcelCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="Exportar a Excel (.xlsx)">
                <md:PackIcon Foreground="White" Kind="FileExcel" />
            </Button>

            <!--  Exportar a PDF  -->
            <Button
                Width="40"
                Height="40"
                Margin="8,0,0,0"
                Background="#D9534F"
                BorderBrush="Transparent"
                Command="{Binding ExportarPdfCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="Exportar a PDF">
                <md:PackIcon Foreground="White" Kind="FilePdfBox" />
            </Button>
        </StackPanel>

        <Border
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="0,0,0,10"
            Padding="8"
            Background="#F5F5F7"
            CornerRadius="8">
            <DockPanel>
                <md:PackIcon
                    Width="20"
                    Height="20"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    Foreground="#757575"
                    Kind="Magnify" />
                <TextBox
                    Width="280"
                    md:HintAssist.Hint="Buscar por CI, usuario, rol, nombre..."
                    Background="Transparent"
                    BorderThickness="0"
                    Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </Border>
        <DataGrid
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Margin="0"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding UsuariosView}">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding IdUsuario}"
                    Header="No" />

                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CI}"
                    Header="CI" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NombreUsuario}"
                    Header="Nombre de Usuario" />

                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Rol}"
                    Header="Rol" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DescripcionRol}"
                    Header="Descripción" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NombreCompleto}"
                    Header="Apellidos y Nombres" />

                <DataGridTemplateColumn Width="130" Header="Estado">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <md:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,6,0"
                                    Foreground="{Binding Activo, Converter={StaticResource EstadoToColorConverter}}"
                                    Kind="{Binding Activo, Converter={StaticResource EstadoToIconConverter}}" />

                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Text="{Binding Activo, Converter={StaticResource EstadoToTextConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Genero, Converter={StaticResource BoolToGeneroConverter}}"
                    Header="Genero" />

                <DataGridTemplateColumn Width="150" Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <Button
                                    Width="30"
                                    Height="30"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EditarUsuarioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <Viewbox Stretch="Uniform">
                                        <md:PackIcon Foreground="#EFB214" Kind="PencilBox" />
                                    </Viewbox>

                                </Button>
                                <Button
                                    Width="30"
                                    Height="30"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EliminarUsuarioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <Viewbox Stretch="Uniform">
                                        <md:PackIcon Foreground="#D9534F" Kind="MinusCircle" />
                                    </Viewbox>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
