<UserControl
    x:Class="ClientCoopSoft.Views.PersonasView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ClientCoopSoft.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:BoolToGeneroConverter x:Key="BoolToGeneroConverter" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="SemiBold"
            Text="Lista de Personas" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,0,0,20"
            FontSize="20"
            FontWeight="SemiBold"
            Text="Agregar persona"
            TextAlignment="Right" />
        <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            Margin="10,0,0,40"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <!--  Botón Agregar (tu original)  -->
            <Button
                Width="40"
                Height="40"
                Background="#22B14C"
                BorderBrush="Transparent"
                Command="{Binding AgregarPersonaCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="Agregar persona">
                <md:PackIcon Foreground="White" Kind="AccountPlus" />
            </Button>

            <!--  Exportar a Excel (.xlsx)  -->
            <Button
                Width="40"
                Height="40"
                Margin="8,0,0,0"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding ExportarExcelCommand}"
                ToolTip="Exportar a Excel (.xlsx)">
                <md:PackIcon
                    Width="10"
                    Height="10"
                    Foreground="#217346"
                    Kind="FileExcel" />
            </Button>

            <!--  Exportar a PDF  -->
            <Button
                Width="40"
                Height="40"
                Margin="8,0,0,0"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding ExportarPdfCommand}"
                ToolTip="Exportar a PDF">
                <md:PackIcon
                    Width="10"
                    Height="10"
                    Foreground="#D9534F"
                    Kind="FilePdfBox" />
            </Button>
        </StackPanel>
        <DataGrid
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="0"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding Personas}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding IdPersona}"
                    Header="No" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CarnetIdentidad}"
                    Header="CI" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ApellidoPaterno}"
                    Header="Ap.Paterno" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding ApellidoMaterno}"
                    Header="Ap.Materno" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NombreCompleto}"
                    Header="Nombres" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FechaNacimiento}"
                    Header="F.Nacimiento" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Genero, Converter={StaticResource BoolToGeneroConverter}}"
                    Header="Genero" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Direccion}"
                    Header="Direccion" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Telefono}"
                    Header="Telefono" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Email}"
                    Header="Email" />
                <DataGridTemplateColumn Width="100" Header="Foto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border
                                Width="60"
                                Height="60"
                                ClipToBounds="True"
                                CornerRadius="30">
                                <Image
                                    Width="60"
                                    Height="60"
                                    Source="{Binding Foto}"
                                    Stretch="UniformToFill" />
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="150" Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button
                                    Width="auto"
                                    Height="auto"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EditarPersonaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <md:PackIcon
                                        Width="auto"
                                        Height="auto"
                                        Foreground="#EFB214"
                                        Kind="PencilOutline" />
                                </Button>
                                <Button
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EliminarPersonaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <md:PackIcon
                                        Width="auto"
                                        Height="auto"
                                        Foreground="#D9534F"
                                        Kind="Delete" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
