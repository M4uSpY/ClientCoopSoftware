<UserControl
    x:Class="ClientCoopSoft.Views.Faltas.ListaFaltasView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.Faltas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="SemiBold"
            Foreground="#303048"
            Text="Control de atrasos" />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Width="45"
            Height="40"
            Margin="8,0,0,0"
            Padding="4"
            Background="#D9534F"
            BorderBrush="Transparent"
            Command="{Binding ExportarPdfCommand}"
            Style="{StaticResource MaterialDesignRaisedButton}"
            ToolTip="Exportar a PDF">
            <Viewbox Stretch="Uniform">
                <md:PackIcon Foreground="White" Kind="FilePdfBox" />
            </Viewbox>
        </Button>


        <Border
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="0,0,0,10"
            Padding="8"
            Background="#F5F5F7"
            CornerRadius="8">
            <DockPanel>
                <md:PackIcon
                    Width="20"
                    Height="20"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    Foreground="#757575"
                    Kind="Magnify" />
                <TextBox
                    Width="320"
                    md:HintAssist.Hint="Buscar por CI, nombre, tipo, fecha, descripción, archivo justificativo..."
                    Background="Transparent"
                    BorderThickness="0"
                    Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </Border>
        <DataGrid
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Margin="0"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding FaltasView}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding IdFalta}"
                    Header="No" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CI}"
                    Header="CI" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ApellidosNombres}"
                    Header="Apellidos y Nombres" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Tipo}"
                    Header="Tipo" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Fecha}"
                    Header="Fecha" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Descripcion}"
                    Header="Descripcion" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding EstadoArchivoJustificativo}"
                    Header="Tiene Archivo Justificativo" />

                <DataGridTemplateColumn Width="*" Header="Archivo justificativo">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Margin="1" Orientation="Horizontal">
                                <!--  Ver archivo  -->
                                <Button
                                    Margin="0,0,4,0"
                                    Padding="6"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.VerArchivoFaltaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Cursor="Hand">

                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Foreground" Value="#303048" />

                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border
                                                            Padding="{TemplateBinding Padding}"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="6">

                                                            <md:PackIcon
                                                                Width="20"
                                                                Height="20"
                                                                Foreground="{TemplateBinding Foreground}"
                                                                Kind="EyeOutline" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>

                                            <!--  Zoom suave  -->
                                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                                </Setter.Value>
                                            </Setter>

                                            <Style.Triggers>
                                                <!--  HOVER  -->
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#20EFB214" />
                                                    <!--  fondo suave  -->
                                                    <Setter Property="Foreground" Value="#EFB214" />
                                                    <!--  icono amarillo  -->
                                                    <Setter Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="1.12" ScaleY="1.12" />
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>

                                                <!--  CLICK  -->
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#40EFB214" />
                                                    <Setter Property="Foreground" Value="#C89610" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>




                                <!--  Subir / Actualizar archivo  -->
                                <Button
                                    Margin="0,0,4,0"
                                    Padding="8,2"
                                    md:ButtonAssist.CornerRadius="4"
                                    Background="#323AA3"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.SubirArchivoFaltaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Subir"
                                    Foreground="White" />

                                <!--  Eliminar falta  -->
                                <Button
                                    Padding="8,2"
                                    md:ButtonAssist.CornerRadius="4"
                                    Background="#E53935"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EliminarFaltaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Content="Eliminar"
                                    Foreground="White" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</UserControl>
