<Window
    x:Class="ClientCoopSoft.Views.CrearUsuarioView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Crear Usuario"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Border
        x:Name="borde"
        Width="700"
        Height="430"
        Background="White"
        BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="10"
        MouseLeftButtonDown="borde_MouseLeftButtonDown">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.ColumnSpan="2"
                Width="638"
                Height="48"
                Margin="0,0,0,30"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="36"
                FontWeight="SemiBold"
                Foreground="#695858"
                Text="Agregar Usuario"
                TextAlignment="Center" />


            <!--  Nombre de usuario  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <!--  Etiqueta  -->
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Ingrese el nombre de usuario:" />

                <!--  Caja de texto con bordes redondeados  -->

                <TextBox
                    Width="250"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding NombreUsuario, UpdateSourceTrigger=PropertyChanged}" />


            </StackPanel>

            <!--  Persona  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Personas registradas:" />

                <ComboBox
                    Width="250"
                    Height="auto"
                    Margin="0,5,0,0"
                    md:HintAssist.Foreground="Transparent"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    Background="Transparent"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    DisplayMemberPath="NombreCompleto"
                    ItemsSource="{Binding Personas}"
                    SelectedItem="{Binding PersonaSeleccionada}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />

            </StackPanel>

            <!--  Rol  -->
            <StackPanel
                Grid.Row="2"
                Grid.Column="2"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Roles:" />

                <ComboBox
                    Width="250"
                    Height="auto"
                    Margin="0,5,0,0"
                    md:HintAssist.ApplyHintPaddingBrush="False"
                    md:HintAssist.Foreground="Transparent"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    Background="Transparent"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    DisplayMemberPath="NombreRol"
                    ItemsSource="{Binding Roles}"
                    SelectedItem="{Binding RolSeleccionado}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />

            </StackPanel>

            <!--  Contrasena  -->
            <StackPanel
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <!--  Contrasena  -->
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Ingrese la contraseña:" />
                <PasswordBox
                    x:Name="PwdBox"
                    Width="250"
                    Height="auto"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderThickness="0.3"
                    Foreground="#666">
                    <PasswordBox.Style>
                        <Style BasedOn="{StaticResource MaterialDesignOutlinedRevealPasswordBox}" TargetType="PasswordBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True" />
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

            </StackPanel>
            <!--  Botones  -->
            <StackPanel
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Grid.Column="0"
                    Width="90"
                    Margin="0,0,6,0"
                    Background="#1DA143"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding GuardarCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Guardar"
                    Foreground="White" />
                <Button
                    Grid.Column="1"
                    Width="90"
                    Background="#FF214F"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding CancelarCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Cancelar"
                    Foreground="White" />
            </StackPanel>
        </Grid>
    </Border>

</Window>
