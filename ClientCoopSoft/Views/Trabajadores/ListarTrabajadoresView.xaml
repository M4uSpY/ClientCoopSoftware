<UserControl
    x:Class="ClientCoopSoft.Views.Trabajadores.ListarTrabajadoresView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ClientCoopSoft.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.Trabajadores"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">
    <UserControl.Resources>
        <conv:BoolToGeneroConverter x:Key="BoolToGeneroConverter" />
        <conv:EstadoToIconConverter x:Key="EstadoToIconConverter" />
        <conv:EstadoToColorConverter x:Key="EstadoToColorConverter" />
        <conv:EstadoToTextConverter x:Key="EstadoToTextConverter" />
        <conv:IndexToNumeroConverter x:Key="IndexToNumeroConverter" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="SemiBold"
            Text="Lista de Trabajadores" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,0,0,20"
            FontSize="20"
            FontWeight="SemiBold"
            Text="Agregar trabajador"
            TextAlignment="Right" />

        <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            Margin="10,0,0,40"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <Button
                Width="40"
                Height="40"
                Margin="0,0,8,0"
                Background="#D9534F"
                BorderBrush="Transparent"
                Command="{Binding ExportarPdfCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="Exportar a PDF">
                <md:PackIcon Foreground="White" Kind="FilePdfBox" />
            </Button>

            <Button
                Width="40"
                Height="40"
                Background="#22B14C"
                BorderBrush="Transparent"
                Command="{Binding AgregarTrabajadorCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="Agregar trabajador">
                <md:PackIcon Foreground="White" Kind="AccountPlus" />
            </Button>
        </StackPanel>

        <Border
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="0,0,0,10"
            Padding="8"
            Background="#F5F5F7"
            CornerRadius="8">
            <DockPanel>
                <md:PackIcon
                    Width="20"
                    Height="20"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center"
                    Foreground="#757575"
                    Kind="Magnify" />
                <TextBox
                    Width="280"
                    md:HintAssist.Hint="Buscar por CI, nombre, apellido, cargo, oficina..."
                    Background="Transparent"
                    BorderThickness="0"
                    Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </Border>

        <DataGrid
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Margin="0"
            AlternationCount="1000000"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding TrabajadoresView}">
            <DataGrid.Columns>

                <DataGridTemplateColumn Width="Auto" Header="No">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <Binding
                                        Converter="{StaticResource IndexToNumeroConverter}"
                                        Path="AlternationIndex"
                                        RelativeSource="{RelativeSource AncestorType=DataGridRow}" />
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding IdTrabajador}"
                    Header="No"
                    Visibility="Collapsed" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding CI}"
                    Header="CI" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Apellidos}"
                    Header="Apellidos" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Nombres}"
                    Header="Nombres" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Nacionalidad}"
                    Header="Nacionalidad" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Genero, Converter={StaticResource BoolToGeneroConverter}}"
                    Header="Genero" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Cargo}"
                    Header="Cargo" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NombreOficina}"
                    Header="Oficina" />
                <DataGridTemplateColumn Width="130" Header="Estado">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <md:PackIcon
                    Width="20"
                    Height="20"
                    Margin="0,0,6,0"
                    Foreground="{Binding Activo, Converter={StaticResource EstadoToColorConverter}}"
                    Kind="{Binding Activo, Converter={StaticResource EstadoToIconConverter}}" />

                                <TextBlock
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Text="{Binding Activo, Converter={StaticResource EstadoToTextConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="150" Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <Button
                                    Width="30"
                                    Height="30"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EditarTrabajadorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <Viewbox Stretch="Uniform">
                                        <md:PackIcon Foreground="#EFB214" Kind="PencilBox" />
                                    </Viewbox>
                                </Button>
                                <Button
                                    Width="30"
                                    Height="30"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EliminarTrabajadorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <Viewbox Stretch="Uniform">
                                        <md:PackIcon Foreground="#D9534F" Kind="Delete" />
                                    </Viewbox>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
