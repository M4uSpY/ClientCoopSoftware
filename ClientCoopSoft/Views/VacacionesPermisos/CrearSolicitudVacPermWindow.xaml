<Window
    x:Class="ClientCoopSoft.Views.VacacionesPermisos.CrearSolicitudVacPermWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.VacacionesPermisos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Border Padding="20">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10">

                <TextBlock FontWeight="Bold" Text="Fecha Inicio" />
                <DatePicker Margin="0,5,0,15" SelectedDate="{Binding FechaInicio}" />

                <TextBlock FontWeight="Bold" Text="Fecha Fin" />
                <DatePicker Margin="0,5,0,15" SelectedDate="{Binding FechaFin}" />

                <TextBlock FontWeight="Bold" Text="Tipo de Solicitud" />
                <ComboBox
                    Margin="0,5,0,15"
                    DisplayMemberPath="ValorCategoria"
                    ItemsSource="{Binding TiposSolicitud}"
                    SelectedItem="{Binding TipoSeleccionado}" />

                <TextBlock FontWeight="Bold" Text="Motivo" />
                <TextBox Margin="0,5,0,15" Text="{Binding Motivo}" />

                <TextBlock FontWeight="Bold" Text="Observación" />
                <TextBox
                    Height="100"
                    Margin="0,5,0,15"
                    AcceptsReturn="True"
                    Text="{Binding Observacion}" />

            </StackPanel>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">

                <Button
                    Width="120"
                    Height="40"
                    Command="{Binding EnviarCommand}"
                    Content="Enviar" />

                <Button
                    Width="120"
                    Height="40"
                    Command="{Binding CancelarCommand}"
                    Content="Cancelar" />
            </StackPanel>

        </Grid>
    </Border>
</Window>
