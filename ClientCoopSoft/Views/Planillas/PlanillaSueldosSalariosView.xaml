<UserControl
    x:Class="ClientCoopSoft.Views.Planillas.PlanillaSueldosSalariosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ClientCoopSoft.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToTextoCerradaConverter x:Key="BoolToTextoCerradaConverter" />
        <converters:BoolToBrushConverter x:Key="BoolToBrushConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  TÍTULO  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,10"
            FontSize="24"
            FontWeight="SemiBold"
            Foreground="#303048"
            Text="Planilla de Sueldos y Salarios" />

        <!--  FILTROS + BOTONES  -->
        <DockPanel
            Grid.Row="1"
            Margin="0,0,0,10"
            LastChildFill="True">

            <!--  Controles de gestión/mes/id  -->
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <!--  Gestión  -->
                <StackPanel Margin="0,0,16,0">
                    <TextBlock
                        FontSize="11"
                        Foreground="#666"
                        Text="Gestión" />
                    <TextBox
                        Width="80"
                        Margin="0,2,0,0"
                        md:TextFieldAssist.DecorationVisibility="Hidden"
                        Text="{Binding Gestion, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Mes  -->
                <StackPanel Margin="0,0,16,0">
                    <TextBlock
                        FontSize="11"
                        Foreground="#666"
                        Text="Mes" />
                    <TextBox
                        Width="50"
                        Margin="0,2,0,0"
                        md:TextFieldAssist.DecorationVisibility="Hidden"
                        Text="{Binding Mes, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Id Planilla  -->
                <StackPanel Margin="0,0,16,0">
                    <TextBlock
                        FontSize="11"
                        Foreground="#666"
                        Text="Id Planilla" />
                    <TextBox
                        Width="80"
                        Margin="0,2,0,0"
                        md:TextFieldAssist.DecorationVisibility="Hidden"
                        Text="{Binding IdPlanillaActual, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Estado cerrada  -->
                <StackPanel Margin="0,0,16,0" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="11"
                        Foreground="#666"
                        Text="Estado" />
                    <TextBlock
                        Margin="0,2,0,0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{Binding EstaCerrada, Converter={StaticResource BoolToBrushConverter}}">
                        <Run Text="{Binding EstaCerrada, Converter={StaticResource BoolToTextoCerradaConverter}}" />
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <!--  Botones de acciones  -->
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <!--  Crear + calcular  -->
                <Button
                    Margin="8,0,0,0"
                    Padding="12,4"
                    Background="#0078D7"
                    Command="{Binding CrearYCalcularPlanillaCommand}"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Margin="0,0,6,0" Kind="PlusBox" />
                        <TextBlock Text="Crear y calcular" />
                    </StackPanel>
                </Button>

                <!--  Cargar  -->
                <Button
                    Margin="8,0,0,0"
                    Padding="12,4"
                    Command="{Binding CargarPlanillaCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Margin="0,0,6,0" Kind="Refresh" />
                        <TextBlock Text="Cargar" />
                    </StackPanel>
                </Button>

                <!--  Recalcular  -->
                <Button
                    Margin="8,0,0,0"
                    Padding="12,4"
                    Command="{Binding RecalcularPlanillaCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Margin="0,0,6,0" Kind="CalculatorVariant" />
                        <TextBlock Text="Recalcular" />
                    </StackPanel>
                </Button>

                <!--  Cerrar planilla  -->
                <Button
                    Margin="8,0,0,0"
                    Padding="12,4"
                    Command="{Binding CerrarPlanillaCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Margin="0,0,6,0" Kind="Lock" />
                        <TextBlock Text="Cerrar" />
                    </StackPanel>
                </Button>

                <!--  Exportar Excel  -->
                <Button
                    Width="40"
                    Height="40"
                    Margin="16,0,0,0"
                    Background="#1D9942"
                    BorderBrush="Transparent"
                    Command="{Binding ExportarExcelCommand}"
                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                    ToolTip="Exportar a Excel (.xlsx)">
                    <md:PackIcon Foreground="White" Kind="FileExcel" />
                </Button>

                <!--  Exportar PDF  -->
                <Button
                    Width="40"
                    Height="40"
                    Margin="8,0,0,0"
                    Background="#D9534F"
                    BorderBrush="Transparent"
                    Command="{Binding ExportarPdfCommand}"
                    Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                    ToolTip="Exportar a PDF">
                    <md:PackIcon Foreground="White" Kind="FilePdfBox" />
                </Button>
            </StackPanel>
        </DockPanel>

        <!--  DATA GRID  -->
        <DataGrid
            Grid.Row="2"
            Margin="0"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding PlanillaSueldos}">
            <DataGrid.Resources>
                <!--  Alineación derecha y formato numérico  -->
                <Style x:Key="RightAlignNumericCell" TargetType="DataGridCell">
                    <Setter Property="TextBlock.TextAlignment" Value="Right" />
                    <Setter Property="Padding" Value="4,0,4,0" />
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="40"
                    Binding="{Binding Id}"
                    Header="No" />

                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding CarnetIdentidad}"
                    Header="CI" />
                <DataGridTextColumn
                    Width="220"
                    Binding="{Binding ApellidosNombres}"
                    Header="Apellidos y Nombres" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding Nacionalidad}"
                    Header="Nac." />
                <DataGridTextColumn
                    Width="110"
                    Binding="{Binding FechaNacimiento, StringFormat=d}"
                    Header="F. Nac." />
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding Sexo}"
                    Header="Sexo" />
                <DataGridTextColumn
                    Width="160"
                    Binding="{Binding Ocupacion}"
                    Header="Ocupación" />
                <DataGridTextColumn
                    Width="110"
                    Binding="{Binding FechaIngreso, StringFormat=d}"
                    Header="F. Ingreso" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding DiasPagados}"
                    Header="Días pagados" />

                <!--  OTROS PAGOS  -->
                <DataGridTextColumn
                    Width="110"
                    Binding="{Binding HaberBasico, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Haber Básico" />

                <DataGridTextColumn
                    Width="110"
                    Binding="{Binding BonoAntiguedad, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Bono Antig." />

                <DataGridTextColumn
                    Width="110"
                    Binding="{Binding BonoProduccion, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Bono Prod." />

                <DataGridTextColumn
                    Width="130"
                    Binding="{Binding AporteCoop334, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Aporte Coop 3.34%" />

                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding TotalGanado, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Total Ganado" />

                <!--  DESCUENTOS  -->
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Gestora1221, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Gestora 12.21%" />

                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding RcIva13, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="RC-IVA 13%" />

                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding AporteSolidario05, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Ap. Solid. 0.5%" />

                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding OtrosDesc668, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Otros 6.68%" />

                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding OtrosDescuentos, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Otros Desc." />

                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding TotalDescuentos, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Total Desc." />

                <DataGridTextColumn
                    Width="130"
                    Binding="{Binding LiquidoPagable, StringFormat=N2}"
                    ElementStyle="{StaticResource RightAlignNumericCell}"
                    Header="Líquido Pagable" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
