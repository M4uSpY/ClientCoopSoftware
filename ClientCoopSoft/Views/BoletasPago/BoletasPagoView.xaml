<UserControl
    x:Class="ClientCoopSoft.Views.BoletasPago.BoletasPagoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.BoletasPago"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Título  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,4"
            FontSize="24"
            FontWeight="SemiBold"
            Foreground="#303048"
            Text="Tus Boletas de Pago" />

        <!--  Instrucción  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,10"
            FontSize="12"
            Foreground="#555"
            Text="Haga clic en el botón PDF de la fila para descargar la boleta de pago correspondiente." />

        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,10"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,8,0"
                VerticalAlignment="Center"
                FontSize="12"
                Text="Filtrar por:" />

            <!--  Año / Gestión  -->
            <StackPanel Margin="0,0,16,0" Orientation="Horizontal">
                <ComboBox
                    Width="90"
                    Height="Auto"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint="Año"
                    md:HintAssist.HintPaddingBrush="White"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    BorderBrush="#CCC"
                    IsEditable="False"
                    ItemsSource="{Binding Anios}"
                    SelectedItem="{Binding AnioSeleccionado, Mode=TwoWay}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />
            </StackPanel>

            <!--  Mes  -->
            <StackPanel Orientation="Horizontal">
                <ComboBox
                    Width="130"
                    Height="Auto"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint="Mes"
                    md:HintAssist.HintPaddingBrush="White"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    BorderBrush="#CCC"
                    DisplayMemberPath="Nombre"
                    IsEditable="False"
                    ItemsSource="{Binding Meses}"
                    SelectedItem="{Binding MesSeleccionado, Mode=TwoWay}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />
            </StackPanel>
        </StackPanel>

        <DataGrid
            Grid.Row="3"
            Margin="0"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding BoletasView}"
            SelectedItem="{Binding BoletaSeleccionada}">
            <DataGrid.Resources>
                <!--  Estilo para alinear a la izquierda todas las celdas de texto  -->
                <Style x:Key="LeftAlignCell" TargetType="TextBlock">
                    <Setter Property="TextAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="Padding" Value="4,0,4,0" />
                </Style>

                <Style x:Key="RightAlignCell" TargetType="TextBlock">
                    <Setter Property="TextAlignment" Value="Right" />
                    <Setter Property="Padding" Value="4,0,4,0" />
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding IdPlanilla}"
                    ElementStyle="{StaticResource LeftAlignCell}"
                    Header="Id Planilla" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Gestion}"
                    ElementStyle="{StaticResource LeftAlignCell}"
                    Header="Gestión" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding MesNombre}"
                    ElementStyle="{StaticResource LeftAlignCell}"
                    Header="Mes" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NombreCompleto}"
                    ElementStyle="{StaticResource LeftAlignCell}"
                    Header="Trabajador" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Cargo}"
                    ElementStyle="{StaticResource LeftAlignCell}"
                    Header="Cargo" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DiasTrabajados}"
                    ElementStyle="{StaticResource LeftAlignCell}"
                    Header="Días Trab." />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TotalGanado, StringFormat=N2}"
                    ElementStyle="{StaticResource LeftAlignCell}"
                    Header="Total Ganado" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding LiquidoPagable, StringFormat=N2}"
                    ElementStyle="{StaticResource LeftAlignCell}"
                    Header="Líquido Pagable" />

                <DataGridTemplateColumn Width="*" Header="Archivo PDF">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Width="80"
                                Padding="6,2"
                                HorizontalAlignment="Left"
                                HorizontalContentAlignment="Center"
                                Background="Red"
                                Command="{Binding DataContext.DescargarPdfCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Style="{StaticResource MaterialDesignFlatButton}">
                                <StackPanel Orientation="Horizontal">
                                    <md:PackIcon
                                        Margin="0,0,4,0"
                                        Foreground="White"
                                        Kind="FilePdfBox" />
                                    <TextBlock Foreground="White" Text="PDF" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
