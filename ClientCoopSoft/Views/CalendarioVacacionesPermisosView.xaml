<UserControl
    x:Class="ClientCoopSoft.Views.VacacionesPermisos.CalendarioVacacionesPermisosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Encabezado  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Margin="0,0,0,20"
                FontSize="24"
                FontWeight="SemiBold"
                Text="Calendario de Vacaciones y Licencias" />

            <!--  Botón ver lista (solo admin)  -->
            <Button
                Grid.Column="1"
                Width="Auto"
                Height="32"
                Margin="10,0,0,20"
                Background="#303048"
                BorderBrush="Transparent"
                BorderThickness="0"
                Command="{Binding SolicitudesCommand}"
                Content="Ver Lista de Solicitudes"
                Foreground="White"
                Visibility="{Binding EsAdmin, Converter={StaticResource BoolToVis}}" />

            <!--  Stack con 2 botones: Vacación y Licencia  -->
            <StackPanel
                Grid.Column="2"
                Margin="10,0,0,20"
                Orientation="Horizontal">

                <Button
                    Width="110"
                    Height="32"
                    Background="#22B14C"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding SolicitarCommand}"
                    Content="Solicitar vacación"
                    Foreground="White" />

                <Button
                    Width="120"
                    Height="32"
                    Margin="10,0,0,0"
                    Background="#007ACC"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding SolicitarLicenciaCommand}"
                    Content="Solicitar licencia"
                    Foreground="White" />

                <Button
                    Grid.Column="3"
                    Width="140"
                    Height="32"
                    Margin="10,0,0,0"
                    Background="#0078D7"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding LicenciasCommand}"
                    Content="Ver Licencias"
                    Foreground="White"
                    Visibility="{Binding EsAdmin, Converter={StaticResource BoolToVis}}" />
            </StackPanel>
        </Grid>


        <!--  Contenido: o calendario O vista dinámica  -->
        <Grid Grid.Row="1">
            <Grid.Resources>
                <!--  Estilo para el calendario: solo visible cuando ContenidoActual es null  -->
                <Style TargetType="syncfusion:SfScheduler">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ContenidoActual}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>

                <!--  Estilo para la vista dinámica: solo visible cuando ContenidoActual != null  -->
                <Style TargetType="ContentControl">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ContenidoActual}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>

            <!--  Calendario  -->
            <syncfusion:SfScheduler
                x:Name="Schedule"
                ItemsSource="{Binding Eventos}"
                ViewType="Month">
                <syncfusion:SfScheduler.MonthViewSettings>
                    <syncfusion:MonthViewSettings
                        AppointmentDisplayCount="3"
                        AppointmentDisplayMode="Appointment"
                        ShowAgendaView="True" />
                </syncfusion:SfScheduler.MonthViewSettings>
            </syncfusion:SfScheduler>

            <!--  Vista dinámica (lista de solicitudes, etc.)  -->
            <ContentControl Content="{Binding ContenidoActual}" />
        </Grid>
    </Grid>
</UserControl>
