<UserControl
    x:Class="ClientCoopSoft.Views.Licencias.SolicitudesLicenciasView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.Licencias"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Encabezado  -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button
                Width="35"
                Height="35"
                Margin="0,0,0,10"
                Background="#1E0F74"
                BorderBrush="Transparent"
                BorderThickness="0"
                Command="{Binding VolverCommand}"
                Foreground="#333"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}">
                <md:PackIcon
                    Width="20"
                    Height="30"
                    Foreground="White"
                    Kind="ArrowLeft" />
            </Button>

            <TextBlock
                Margin="10,0,0,20"
                FontSize="24"
                FontWeight="SemiBold"
                Text="Lista de Licencias" />
        </StackPanel>

        <!--  DataGrid  -->
        <DataGrid
            Grid.Row="1"
            Margin="0"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding LicenciasLista}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding IdLicencia}"
                    Header="N°" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CI}"
                    Header="CI" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ApellidosNombres}"
                    Header="Apellidos y Nombres" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Cargo}"
                    Header="Cargo" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TipoLicencia}"
                    Header="Tipo Licencia" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding EstadoLicencia}"
                    Header="Estado" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding FechaInicio, StringFormat=dd/MM/yyyy}"
                    Header="Fecha Inicio" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding FechaFin, StringFormat=dd/MM/yyyy}"
                    Header="Fecha Fin" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding HoraInicio}"
                    Header="Hora Inicio" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding HoraFin}"
                    Header="Hora Fin" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CantidadJornadas}"
                    Header="Jornadas" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Motivo}"
                    Header="Motivo" />

                <!--  Acciones  -->
                <DataGridTemplateColumn Width="150" Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <!--  APROBAR  -->
                                <Button
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.AprobarLicenciaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <md:PackIcon
                                        Width="16"
                                        Height="16"
                                        Foreground="#22B14C"
                                        Kind="Check" />
                                </Button>

                                <!--  RECHAZAR  -->
                                <Button
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.RechazarLicenciaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <md:PackIcon
                                        Width="16"
                                        Height="16"
                                        Foreground="#D9534F"
                                        Kind="Delete" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
