<UserControl
    x:Class="ClientCoopSoft.Views.Asistencia.AsistenciaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.Asistencia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Width="40"
            Height="40"
            Margin="8,0,0,0"
            Background="#D9534F"
            BorderBrush="Transparent"
            Command="{Binding ExportarPdfCommand}"
            Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
            ToolTip="Exportar a PDF">
            <md:PackIcon Foreground="White" Kind="FilePdfBox" />
        </Button>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="SemiBold"
            Text="Registros de Asistencia" />
        <DataGrid
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="0"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding Asistencias}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding IdAsistencia}"
                    Header="No" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CI}"
                    Header="CI" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding ApellidosNombres}"
                    Header="Apellidos y Nombres" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Cargo}"
                    Header="Cargo" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Fecha}"
                    Header="Fecha" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Hora}"
                    Header="Hora" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Oficina}"
                    Header="Oficina" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding EsEntrada}"
                    Header="Tipo" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
