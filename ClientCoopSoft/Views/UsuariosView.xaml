<UserControl
    x:Class="ClientCoopSoft.Views.UsuariosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ClientCoopSoft.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToGeneroConverter x:Key="BoolToGeneroConverter" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,0,20"
            FontSize="24"
            FontWeight="SemiBold"
            Text="Lista de Usuarios" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,0,0,20"
            FontSize="20"
            FontWeight="SemiBold"
            Text="Agregar usuario"
            TextAlignment="Right" />
        <StackPanel
            Grid.Row="0"
            Grid.Column="2"
            Margin="10,0,0,40"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <!--  Botón Agregar (tu original)  -->
            <Button
                Width="40"
                Height="40"
                Background="#22B14C"
                BorderBrush="Transparent"
                Command="{Binding AgregarUsuarioCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="Agregar usuario">
                <md:PackIcon Foreground="White" Kind="AccountPlus" />
            </Button>

            <!--  Exportar a Excel (.xlsx)  -->
            <Button
                Width="40"
                Height="40"
                Margin="8,0,0,0"
                Background="#1D9942"
                BorderBrush="Transparent"
                Command="{Binding ExportarExcelCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="Exportar a Excel (.xlsx)">
                <md:PackIcon Foreground="White" Kind="FileExcel" />
            </Button>

            <!--  Exportar a PDF  -->
            <Button
                Width="40"
                Height="40"
                Margin="8,0,0,0"
                Background="#D9534F"
                BorderBrush="Transparent"
                Command="{Binding ExportarPdfCommand}"
                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                ToolTip="Exportar a PDF">
                <md:PackIcon Foreground="White" Kind="FilePdfBox" />
            </Button>
        </StackPanel>
        <DataGrid
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="0"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding Usuarios}">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding IdUsuario}"
                    Header="No" />

                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CI}"
                    Header="CI" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NombreUsuario}"
                    Header="Nombre de Usuario" />

                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Rol}"
                    Header="Rol" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DescripcionRol}"
                    Header="Descripción" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding NombreCompleto}"
                    Header="Apellidos y Nombres" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Activo}"
                    Header="Estado" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Genero, Converter={StaticResource BoolToGeneroConverter}}"
                    Header="Genero" />

                <DataGridTemplateColumn Width="150" Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <Button
                                    Width="auto"
                                    Height="auto"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EditarUsuarioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <md:PackIcon
                                        Width="auto"
                                        Height="auto"
                                        Foreground="#EFB214"
                                        Kind="PencilOutline" />
                                </Button>
                                <Button
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.EliminarUsuarioCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <md:PackIcon
                                        Width="auto"
                                        Height="auto"
                                        Foreground="#D9534F"
                                        Kind="Delete" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
