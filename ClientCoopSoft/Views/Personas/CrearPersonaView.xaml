<Window
    x:Class="ClientCoopSoft.Views.Personas.CrearPersonaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:ClientCoopSoft.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.Personas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Agregar Persona"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <conv:BoolToGeneroConverter x:Key="BoolToGeneroConverter" />
        <BitmapImage x:Key="PlaceholderImage" UriSource="/Assets/fotoIcon.png" />
    </Window.Resources>

    <Border
        x:Name="borde"
        Width="1000"
        Height="730"
        Background="White"
        BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="10"
        MouseLeftButtonDown="borde_MouseLeftButtonDown">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.ColumnSpan="3"
                Width="638"
                Height="48"
                Margin="0,0,0,30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="36"
                FontWeight="SemiBold"
                Foreground="#695858"
                Text="Agregar Persona"
                TextAlignment="Center" />


            <!--  Primer Nombre  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Ingrese el primer nombre:" />
                <TextBox
                    Width="250"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding PrimerNombre, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!--  Segundo Nombre  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Ingrese el segundo nombre (opcional):" />
                <TextBox
                    Width="250"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding SegundoNombre, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!--  Apellido Paterno  -->
            <StackPanel
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Ingrese el apellido paterno:" />
                <TextBox
                    Width="250"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding ApellidoPaterno, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!--  Apellido Materno  -->
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Ingrese el apellido materno:" />
                <TextBox
                    Width="250"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding ApellidoMaterno, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!--  Generos  -->
            <StackPanel
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Genero:" />

                <ComboBox
                    Width="250"
                    Height="auto"
                    Margin="0,5,0,0"
                    md:HintAssist.Foreground="Transparent"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    Background="Transparent"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    ItemsSource="{Binding Generos}"
                    SelectedItem="{Binding GeneroSeleccionado}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource BoolToGeneroConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!--  Carnet Identidad  -->
            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Carnet de Identidad:" />
                <TextBox
                    Width="250"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding CarnetIdentidad, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!--  Fecha Nacimiento  -->
            <StackPanel
                Grid.Row="4"
                Grid.Column="0"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Fecha de Nacimiento:" />
                <DatePicker
                    Width="250"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    SelectedDate="{Binding FechaNacimiento, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
            </StackPanel>

            <!--  Telefono  -->
            <StackPanel
                Grid.Row="4"
                Grid.Column="1"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Telefono/Celular:" />
                <TextBox
                    Width="250"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!--  Direccion  -->
            <StackPanel
                Grid.Row="5"
                Grid.Column="0"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Dirección:" />
                <TextBox
                    Width="250"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Direccion, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!--  Email  -->
            <StackPanel
                Grid.Row="5"
                Grid.Column="1"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Email:" />
                <TextBox
                    Width="250"
                    Margin="0,5,0,0"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    md:TextFieldAssist.UnderlineBrush="#0078D7"
                    BorderBrush="Gray"
                    BorderThickness="0.3"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!--  Nacionalidad  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,0,0,35"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <TextBlock
                    Margin="2,0,0,3"
                    FontSize="11"
                    Foreground="#666"
                    Text="Nacionalidad:" />

                <ComboBox
                    Width="250"
                    Height="auto"
                    Margin="0,5,0,0"
                    md:HintAssist.Foreground="Transparent"
                    md:HintAssist.Hint=""
                    md:HintAssist.HintPaddingBrush="Transparent"
                    md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                    Background="Transparent"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    DisplayMemberPath="ValorCategoria"
                    ItemsSource="{Binding Nacionalidades}"
                    SelectedItem="{Binding NacionalidadSeleccionada}"
                    Style="{StaticResource MaterialDesignOutlinedComboBox}" />
            </StackPanel>


            <!--  AGREGAR FOTO  -->
            <StackPanel
                Grid.RowSpan="6"
                Grid.Column="2"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">

                <Image
                    Width="150"
                    Height="150"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ClipToBounds="True"
                    SnapsToDevicePixels="True"
                    Source="{Binding FotoPreview, TargetNullValue={StaticResource PlaceholderImage}}"
                    Stretch="UniformToFill" />

                <Button
                    Width="120"
                    Background="#0078D7"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding SubirFotoCommand}"
                    Content="Subir Foto"
                    Foreground="White" />
            </StackPanel>




            <!--  Botones  -->
            <StackPanel
                Grid.Row="6"
                Grid.ColumnSpan="3"
                Margin="0,15,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Grid.Column="0"
                    Width="90"
                    Margin="0,0,6,0"
                    Background="#1DA143"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding GuardarCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Guardar"
                    Foreground="White" />
                <Button
                    Grid.Column="1"
                    Width="90"
                    Background="#FF214F"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding CancelarCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Cancelar"
                    Foreground="White" />
            </StackPanel>
        </Grid>
    </Border>

</Window>

