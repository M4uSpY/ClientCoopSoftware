<Window
    x:Class="ClientCoopSoft.Views.FormacionAcademica.FormacionAcademicaCrearView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ClientCoopSoft.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.FormacionAcademica"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="{Binding TituloVentana}"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <converters:BytesToImageConverter x:Key="BytesToImageConverter" />
    </Window.Resources>
    <Border
        Width="1000"
        Height="650"
        Background="White"
        BorderBrush="Gray"
        BorderThickness="1"
        CornerRadius="10">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.ColumnSpan="2"
                Width="638"
                Height="48"
                Margin="0,0,0,30"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="36"
                FontWeight="SemiBold"
                Foreground="#695858"
                Text="Agregar Formacion Academica"
                TextAlignment="Center" />
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,0,0,10"
                Orientation="Vertical">

                <!--  Nivel Estudios  -->
                <StackPanel
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="2,0,0,3"
                        FontSize="11"
                        Foreground="#666"
                        Text="Nivel de estudios alcanzado:" />
                    <TextBox
                        Width="463"
                        Margin="0,5,0,0"
                        md:HintAssist.Hint=""
                        md:HintAssist.HintPaddingBrush="Transparent"
                        md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                        md:TextFieldAssist.UnderlineBrush="#0078D7"
                        BorderBrush="Gray"
                        BorderThickness="0.3"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding NivelEstudios, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Título Obtenido  -->
                <StackPanel
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="2,0,0,3"
                        FontSize="11"
                        Foreground="#666"
                        Text="Título obtenido:" />
                    <TextBox
                        Width="463"
                        Margin="0,5,0,0"
                        md:HintAssist.Hint=""
                        md:HintAssist.HintPaddingBrush="Transparent"
                        md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                        md:TextFieldAssist.UnderlineBrush="#0078D7"
                        BorderBrush="Gray"
                        BorderThickness="0.3"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding TituloObtenido, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Institución  -->
                <StackPanel
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="2,0,0,3"
                        FontSize="11"
                        Foreground="#666"
                        Text="Institución donde estudió:" />
                    <TextBox
                        Width="463"
                        Margin="0,5,0,0"
                        md:HintAssist.Hint=""
                        md:HintAssist.HintPaddingBrush="Transparent"
                        md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                        md:TextFieldAssist.UnderlineBrush="#0078D7"
                        BorderBrush="Gray"
                        BorderThickness="0.3"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding Institucion, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Año graduación  -->
                <StackPanel
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="2,0,0,3"
                        FontSize="11"
                        Foreground="#666"
                        Text="Año de graduación:" />
                    <TextBox
                        Width="463"
                        Margin="0,5,0,0"
                        md:HintAssist.Hint=""
                        md:HintAssist.HintPaddingBrush="Transparent"
                        md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                        md:TextFieldAssist.UnderlineBrush="#0078D7"
                        BorderBrush="Gray"
                        BorderThickness="0.3"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding AnioGraduacion, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <!--  Nro Registro Profesional  -->
                <StackPanel
                    Margin="0,0,0,10"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="2,0,0,3"
                        FontSize="11"
                        Foreground="#666"
                        Text="Número de Registro Profesional:" />
                    <TextBox
                        Width="463"
                        Margin="0,5,0,0"
                        md:HintAssist.Hint=""
                        md:HintAssist.HintPaddingBrush="Transparent"
                        md:TextFieldAssist.OutlinedBorderActiveThickness="1.5"
                        md:TextFieldAssist.UnderlineBrush="#0078D7"
                        BorderBrush="Gray"
                        BorderThickness="0.3"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Text="{Binding NroRegistroProfesional, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>
            <Image
                Grid.Row="1"
                Grid.Column="1"
                Source="/Assets/imgFormAcademicaAdd.png" />

            <!--  Botones  -->
            <StackPanel
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="90"
                    Margin="0,0,5,0"
                    md:ButtonAssist.CornerRadius="5"
                    Background="#FF214F"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding CancelarCommand}"
                    Content="Cancelar"
                    Foreground="White" />
                <Button
                    Width="90"
                    Margin="0,0,6,0"
                    md:ButtonAssist.CornerRadius="5"
                    Background="#1DA143"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding GuardarCommand}"
                    Content="Guardar"
                    Foreground="White" />
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Image
                    Width="250"
                    Height="250"
                    Source="{Binding FotoBytes, Converter={StaticResource BytesToImageConverter}}" />
                <Button
                    Width="180"
                    Margin="0,10,0,0"
                    Background="#303048"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Command="{Binding SubirFotoCommand}"
                    Content="Subir Foto"
                    Foreground="#FFFFFF" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    Foreground="#FF214F"
                    Text="Limite de tamanio de foto: 2 MB" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
