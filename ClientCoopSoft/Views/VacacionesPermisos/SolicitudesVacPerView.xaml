<UserControl
    x:Class="ClientCoopSoft.Views.VacacionesPermisos.SolicitudesVacPerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.VacacionesPermisos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Orientation="Horizontal">
            <Button
                Width="90"
                Height="32"
                Margin="0,0,0,10"
                Background="#eeeeee"
                BorderBrush="#ccc"
                Command="{Binding VolverCommand}"
                Content="← Atrás"
                Foreground="#333" />
            <TextBlock
                Margin="10,0,0,20"
                FontSize="24"
                FontWeight="SemiBold"
                Text="Lista de Solicitudes" />
        </StackPanel>

        <DataGrid
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Margin="0"
            AutoGenerateColumns="False"
            Background="White"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding SolicitudesLista}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding IdSolicitud}"
                    Header="No" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CI}"
                    Header="CI" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ApellidosNombres}"
                    Header="Apellidos y Nombres" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding Cargo}"
                    Header="Cargo" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Tipo}"
                    Header="Tipo" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Motivo}"
                    Header="Motivo" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FechaInicio}"
                    Header="FechaInicio" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FechaFin}"
                    Header="FechaFin" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Estado}"
                    Header="Estado" />
                <DataGridTemplateColumn Width="150" Header="Acciones">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                <!--  AprobAR  -->
                                <Button
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.AprobarSolicitudCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <md:PackIcon
                                        Width="16"
                                        Height="16"
                                        Foreground="#22B14C"
                                        Kind="Check" />
                                </Button>

                                <!--  RECHAZAR  -->
                                <Button
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding DataContext.RechazarSolicitudCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <md:PackIcon
                                        Width="16"
                                        Height="16"
                                        Foreground="#D9534F"
                                        Kind="Delete" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
