<UserControl
    x:Class="ClientCoopSoft.Views.BoletasPago.BoletasPagoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClientCoopSoft.Views.BoletasPago"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Título  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,4"
            FontSize="24"
            FontWeight="SemiBold"
            Foreground="#303048"
            Text="Tus Boletas de Pago" />

        <!--  Instrucción  -->
        <TextBlock
            Grid.Row="1"
            Margin="0,0,0,10"
            FontSize="12"
            Foreground="#555"
            Text="Seleccione una boleta y presione 'Descargar PDF' para obtener la papeleta de pago del mes seleccionado." />

        <!--  Tabla + Botón  -->
        <DockPanel Grid.Row="2">
            <Button
                Margin="0,10,0,0"
                Padding="12,4"
                HorizontalAlignment="Right"
                Command="{Binding DescargarPdfCommand}"
                DockPanel.Dock="Bottom"
                Style="{StaticResource MaterialDesignRaisedButton}">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Margin="0,0,6,0" Kind="FilePdfBox" />
                    <TextBlock Text="Descargar PDF" />
                </StackPanel>
            </Button>

            <DataGrid
                Margin="0"
                AutoGenerateColumns="False"
                Background="White"
                BorderThickness="1"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                IsReadOnly="True"
                ItemsSource="{Binding BoletasPago}"
                SelectedItem="{Binding BoletaSeleccionada}">
                <DataGrid.Resources>
                    <Style x:Key="RightAlignCell" TargetType="TextBlock">
                        <Setter Property="TextAlignment" Value="Right" />
                        <Setter Property="Padding" Value="4,0,4,0" />
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="70"
                        Binding="{Binding IdPlanilla}"
                        Header="Id Planilla" />

                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding Gestion}"
                        Header="Gestión" />

                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding MesNombre}"
                        Header="Mes" />

                    <DataGridTextColumn
                        Width="220"
                        Binding="{Binding NombreCompleto}"
                        Header="Trabajador" />

                    <DataGridTextColumn
                        Width="160"
                        Binding="{Binding Cargo}"
                        Header="Cargo" />

                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding DiasTrabajados}"
                        Header="Días Trab." />

                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding TotalGanado, StringFormat=N2}"
                        ElementStyle="{StaticResource RightAlignCell}"
                        Header="Total Ganado" />

                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding LiquidoPagable, StringFormat=N2}"
                        ElementStyle="{StaticResource RightAlignCell}"
                        Header="Líquido Pagable" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>
